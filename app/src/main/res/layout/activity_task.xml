<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout_task"
        android:layout_width="411dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="394dp"
            android:layout_height="48dp"
            android:layout_weight="0"
            android:orientation="vertical"></LinearLayout>


        <TextView
            android:id="@+id/sentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="Please input the details for your task."
            android:textAlignment="viewStart"
            android:textSize="16sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/Waifu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/maid1" />


            <LinearLayout
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rectangle_27"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Task Name:"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/title_input"
                    android:layout_width="149dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/rectangle_12"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="12sp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="0dp"
                            android:layout_weight="0"
                            android:text="Date:"
                            android:textColor="@color/common_google_signin_btn_text_dark_default"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btnDate"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rectangle_19"
                            android:padding="10dp"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            tools:layout_editor_absoluteX="0dp"
                            tools:layout_editor_absoluteY="211dp" />

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:buttonTint="@color/common_google_signin_btn_text_dark_default"
                        android:text="No reminder"
                        android:textAlignment="center"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="Time:"
                            android:textColor="@color/common_google_signin_btn_text_dark_default"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btnTime"
                            android:layout_width="78dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/rectangle_19"
                            android:padding="10dp"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            tools:layout_editor_absoluteX="0dp"
                            tools:layout_editor_absoluteY="211dp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/priority1"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/rectangle_54"
                        android:padding="10dp"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="211dp" />

                    <Button
                        android:id="@+id/priority2"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/rectangle_57"
                        android:padding="10dp"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="211dp" />

                    <Button
                        android:id="@+id/priority3"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/rectangle_58"
                        android:padding="10dp"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="211dp" />

                    <Button
                        android:id="@+id/priority4"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/rectangle_59"
                        android:padding="10dp"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="211dp" />

                    <Button
                        android:id="@+id/priority5"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/rectangle_60"
                        android:padding="10dp"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="211dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView100"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Description:"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="89dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="1dp"
                        android:background="@drawable/rectangle_14"
                        android:gravity="start"
                        android:inputType="text"
                        android:textSize="12sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnTask"
                    android:layout_width="78dp"
                    android:layout_height="37dp"
                    android:layout_below="@+id/btnDate"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_17"
                    android:padding="10dp"
                    android:text="@string/save"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="211dp" />


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
            android:background="@drawable/calendar_background"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
                android:layout_weight="0"
                android:background="@color/colorPrimary">


                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@drawable/ic_button"
                    android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
                    android:drawableLeft="?android:attr/actionModeWebSearchDrawable"
                    android:padding="2dp"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/main_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/calendar_inner_background" />


        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

