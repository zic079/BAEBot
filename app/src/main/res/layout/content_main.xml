<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="411dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="394dp"
                android:layout_height="48dp"
                android:layout_weight="0"
                android:orientation="vertical"></LinearLayout>


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="What would you like assistance on?"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/Waifu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/maid1" />


                <LinearLayout
                    android:layout_width="161dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <Button
                        android:id="@+id/calendarBtn"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@android:dimen/notification_large_icon_height"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:background="@drawable/ic_button"
                        android:text="TEST Calendar"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/showCalendarBtn"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_button"
                        android:text="Show Calendar"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/taskBtn"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:background="@drawable/ic_button"
                        android:text="Test Task"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/weatherBtn"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="32dp"
                        android:background="@drawable/ic_button"
                        android:text="test weather"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
                android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                android:background="@drawable/calendar_background"
                android:orientation="vertical">


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
                    android:layout_weight="0"
                    android:background="@color/colorPrimary">


                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:background="@drawable/ic_button"
                        android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
                        android:drawableLeft="?android:attr/actionModeWebSearchDrawable"
                        android:padding="2dp"
                        android:textSize="14sp" />
                </android.support.design.widget.TextInputLayout>


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
                    android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                    android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
                    android:layout_weight="0"
                    android:background="@drawable/calendar_inner_background">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="0">


                            <TextView
                                android:id="@+id/event1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Event 1"
                                android:textAlignment="center"
                                android:textSize="18sp" />

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="0">


                            <TextView
                                android:id="@+id/event2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Event 2"
                                android:textAlignment="center"
                                android:textSize="18sp" />
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="0">


                            <TextView
                                android:id="@+id/event3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Event 3"
                                android:textAlignment="center"
                                android:textSize="18sp" />


                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="0">


                            <TextView
                                android:id="@+id/event4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Event 4"
                                android:textAlignment="center"
                                android:textSize="18sp" />
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="0">


                            <TextView
                                android:id="@+id/event5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Event 5"
                                android:textAlignment="center"
                                android:textSize="18sp" />
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="0">


                            <TextView
                                android:id="@+id/event6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Event 6"
                                android:textAlignment="center"
                                android:textSize="18sp" />
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="0">


                            <TextView
                                android:id="@+id/event7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Event 7"
                                android:textAlignment="center"
                                android:textSize="18sp" />
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="0">


                            <TextView
                                android:id="@+id/event8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Event 8"
                                android:textAlignment="center"
                                android:textSize="18sp" />
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                </ScrollView>


            </LinearLayout>


        </LinearLayout>

</android.support.constraint.ConstraintLayout>
